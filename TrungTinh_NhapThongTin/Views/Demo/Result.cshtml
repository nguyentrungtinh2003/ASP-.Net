@model TrungTinh_NhapThongTin.Models.CalculatorModel
@{
    ViewData["Title"] = "Kết Quả";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="display-4">Kết Quả</h1>
            <div class="card">
                <div class="card-body">
                    <p class="card-text"><strong>Số thứ nhất:</strong> @Model.Number1</p>
                    <p class="card-text"><strong>Số thứ hai:</strong> @Model.Number2</p>
                    <p class="card-text"><strong>Phép tính:</strong> @Model.Operation</p>
                    <p class="card-text"><strong>Kết quả:</strong> @Model.Result</p>
                </div>
            </div>
        </div>
    </div>
</div>
